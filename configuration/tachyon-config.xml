<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

  <property>
    <name>tachyon.archive.file</name>
    <description>tachyon archive file</description>
    <value>tachyon-0.8.2-bin.tar.gz</value>
  </property>

  <property require-input="true">
    <name>tachyon.master.address</name>
    <description>node where master server is deployed</description>
    <value>hadoop1</value>
  </property>

  <property require-input="true">
    <name>tachyon.underfs.address</name>
    <description>Tachyon UnderFS Address</description>
    <value>hdfs://hadoop1:8020/tachyon</value>
  </property>

  <property>
    <name>tachyon.worker.memory</name>
    <description>Tachyon Worker Memory</description>
    <value>1GB</value>
  </property>

</configuration>
